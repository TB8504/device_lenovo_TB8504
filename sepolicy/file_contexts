# Camera
/data/vendor/qcam(/.*)?                                                    u:object_r:vendor_camera_data_file:s0

# DRM
/(vendor|system/vendor)/bin/hw/android\.hardware\.drm@1\.1-service\.clearkey               u:object_r:hal_drm_clearkey_exec:s0
/(vendor|system/vendor)/bin/hw/android\.hardware\.drm@1\.1-service\.widevine               u:object_r:hal_drm_widevine_exec:s0

# Firmware
/firmware(/.*)?                                                            u:object_r:firmware_file:s0

# Fixes for RR and other ROMs
/dev/cpuset/camera-daemon/cpus                                                         u:object_r:device:s0
/dev/stune/foreground/tasks                                                            u:object_r:device:s0
/data/misc/wifi/WCNSS_qcom_cfg.ini                                                     u:object_r:wifi_data_file:s0
/dev/stune/top-app/tasks                                                               u:object_r:device:s0
/dev                                                                                   u:object_r:device:s0
/oem                                                                                   u:object_r:oemfs:s0
/dev/cpuset/camera-daemon(/.*)?                                                        u:object_r:device:s0

